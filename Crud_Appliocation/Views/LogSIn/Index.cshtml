@model Crud_Appliocation.Models.LoginSingup

@{
    ViewBag.Title = "Index";
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />











@using (Html.BeginForm())
{

    <section class="vh-100">
        <div class="container h-70 " style=" position: relative; top: 20px  ">
            <div class="row d-flex justify-content-center align-items-center h-100   ">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px; ; box-shadow: 4px 2px 5px  black;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class=" h1 fw-bold mb-5 mx-1 mx-md-1 mt-4 ">SignUp</p>

                                    <form class="mx-1 mx-md-4">

                                      

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label style="; font-weight : bold">Username</label>
                                                <br />

                                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control form-control-lg " } })
                                                @Html.ValidationMessageFor(Model => Model.Username, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label style=" font-weight : bold">Password</label>
                                                <br />

                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-lg " } })
                                                @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                   



                                        <input type="submit" name="name" value="Login" class="form-control  form-control-lg btn " style="margin-left:40px ;background: linear-gradient(90deg, rgba(5,30,71,1) 0%, rgba(6,33,75,1) 9%, rgba(28,106,164,1) 100%, rgba(6,175,233,1) 100%) ; color : white; font-weight : bold"  />

                                        <p style="margin-left:40px ; margin-top: 10px">New User? @Html.ActionLink("Create an account", "SignUp", "LogSin" , new { @style = "color : darkblue"})</p>
                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}













