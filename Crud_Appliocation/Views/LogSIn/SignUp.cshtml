@model Crud_Appliocation.Models.LoginSingup

@{
    ViewBag.Title = "SignUp";
}


@using (Html.BeginForm())
{

    <section class="vh-100">
        <div class="container h-70 " style="width:900px;  position: relative; bottom: 70px  ">
            <div class="row d-flex justify-content-center align-items-center h-100   ">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px; ; box-shadow: 4px 2px 5px  black;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class=" h1 fw-bold mb-5 mx-1 mx-md-1 mt-4 ">SignUp</p>

                                    <form class="mx-1 mx-md-4">

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label style=" font-weight : bold">First Name</label>
                                                <br />

                                                @Html.EditorFor(model => model.First_Nam, new { htmlAttributes = new { @class = "form-control form-control-lg " } })
                                                @Html.ValidationMessageFor(Model => Model.First_Nam, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label style=" font-weight : bold">Last Name</label>
                                                <br />

                                                @Html.EditorFor(model => model.Last_Name, new { htmlAttributes = new { @class = "form-control form-control-lg " } })
                                                @Html.ValidationMessageFor(Model => Model.Last_Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label style=" font-weight : bold">Gender</label>
                                                <br />
                                                @Html.DropDownListFor(model => model.Gender, new SelectList(new[] { "Male", "Female" }, "Select Gender"), new { @class = "form-control form-control-lg " })

                                                @Html.ValidationMessageFor(Model => Model.Gender, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label style="font-weight : bold">Email</label>
                                                <br />

                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-lg " } })
                                                @Html.ValidationMessageFor(Model => Model.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>


                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label style="; font-weight : bold">Username</label>
                                                <br />

                                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control form-control-lg " } })
                                                @Html.ValidationMessageFor(Model => Model.Username, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label style=" font-weight : bold">Password</label>
                                                <br />

                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-lg " } })
                                                @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label style=" font-weight : bold">Confirm Password</label>
                                                <br />

                                                @Html.EditorFor(model => model.Re_Paassword, new { htmlAttributes = new { @class = "form-control form-control-lg " } })
                                                @Html.ValidationMessageFor(Model => Model.Re_Paassword, "", new { @class = "text-danger" })
                                            </div>
                                        </div>




                                        <input type="submit" name="name" value="SignUp" class="form-control m-lg-3 form-control-lg btn " style="background: linear-gradient(90deg, rgba(5,30,71,1) 0%, rgba(6,33,75,1) 9%, rgba(28,106,164,1) 100%, rgba(6,175,233,1) 100%) ; color : white ; font-weight :bold" />
                                        <p style="margin-left:40px ; margin-top: 10px">You have already account? @Html.ActionLink("Login", "Index", "LogSin", new { @style = "color : darkblue" })</p>

                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

